<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="logDir" value="logs"/>
    <property name="defaultPattern"
              value="%date{dd/MM/yy HH:mm:ss} %level [%thread] %logger{10} %5p [library,%X{traceId:-},%X{spanId:-},%X{spanExport:-}] [%file:%line] %msg%n"/>
    <property name="generalLogName" value="taskmanager"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${defaultPattern}</pattern>
        </encoder>
    </appender>
    <logger name="com.example.taskmanager" level="debug"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="trace"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>